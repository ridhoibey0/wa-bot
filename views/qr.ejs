<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>QR Code - WhatsApp Bot</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard">
    <!-- Sidebar -->
    <aside class="sidebar">
      <h2>ğŸ¤– WA Bot</h2>
      <nav>
        <a href="/dashboard">ğŸ“Š Dashboard</a>
        <a href="/qr" class="active">ğŸ“± QR Code</a>
        <a href="/users">ğŸ‘¥ Users</a>
        <a href="/menus">ğŸ½ï¸ Menus</a>
        <a href="/gathering">ğŸ‰ Gathering</a>
        <a href="/muted">ğŸ”‡ Muted Users</a>
      </nav>
      <a href="/logout" class="logout">ğŸšª Logout</a>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="header">
        <h1>WhatsApp QR Code</h1>
        <div class="user-info">
          ğŸ‘¤ <strong><%= username %></strong>
        </div>
      </div>

      <div class="qr-container">
        <h2 style="margin-bottom: 20px;">Scan QR Code untuk Login WhatsApp</h2>
        
        <div id="qr-status" style="margin-bottom: 20px;">
          <p id="status-text">Loading QR Code...</p>
        </div>
        
        <div id="qr-image-container">
          <!-- QR Code akan muncul di sini -->
        </div>
        
        <div class="qr-info">
          <p><strong>ğŸ“± Cara Scan QR Code:</strong></p>
          <ol style="text-align: left; display: inline-block; margin-top: 10px;">
            <li>Buka WhatsApp di HP Anda</li>
            <li>Tap menu (â‹®) atau Settings</li>
            <li>Pilih "Linked Devices" atau "WhatsApp Web"</li>
            <li>Tap "Link a Device"</li>
            <li>Scan QR code di atas</li>
          </ol>
        </div>

        <button onclick="checkQR()" class="btn-primary" style="margin-top: 20px;">
          ğŸ”„ Refresh QR Code
        </button>
      </div>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.1/build/qrcode.min.js"></script>
  <script>
    let qrCodeObj = null;
    
    async function checkQR() {
      try {
        const response = await fetch('/api/qr');
        const data = await response.json();
        
        const statusText = document.getElementById('status-text');
        const qrContainer = document.getElementById('qr-image-container');
        
        // Handle different connection states
        if (data.status === 'connected') {
          statusText.textContent = data.message || 'âœ… WhatsApp sudah terkoneksi!';
          statusText.style.color = '#28a745';
          qrContainer.innerHTML = '<div style="padding: 40px; background: #d4edda; border-radius: 10px; color: #155724; text-align: center;"><h3>âœ… Bot Sudah Aktif!</h3><p style="margin-top: 10px;">WhatsApp sudah terkoneksi dan siap digunakan.</p><p style="margin-top: 15px; font-size: 14px; opacity: 0.8;">Tidak perlu scan QR lagi.</p></div>';
        } else if (data.status === 'connecting') {
          statusText.textContent = data.message || 'â³ Sedang menghubungkan...';
          statusText.style.color = '#0056b3';
          qrContainer.innerHTML = '<div style="padding: 40px; color: #0056b3; text-align: center;"><div style="font-size: 40px; margin-bottom: 15px;">ğŸ”„</div><p style="font-weight: 600;">Authenticating...</p></div>';
        } else if (data.status === 'qr' && data.qr) {
          statusText.textContent = data.message || 'ğŸ“± Silakan scan QR Code';
          statusText.style.color = '#28a745';
          
          // Clear previous QR
          qrContainer.innerHTML = '';
          
          // Generate QR Code
          QRCode.toCanvas(data.qr, { 
            width: 400,
            margin: 2,
            color: {
              dark: '#000',
              light: '#fff'
            }
          }, function (error, canvas) {
            if (error) {
              console.error(error);
              statusText.textContent = 'âŒ Error generating QR Code';
              statusText.style.color = '#dc3545';
            } else {
              canvas.style.border = '2px solid #ddd';
              canvas.style.borderRadius = '10px';
              canvas.style.maxWidth = '100%';
              qrContainer.appendChild(canvas);
            }
          });
        } else {
          statusText.textContent = data.message || 'â³ Waiting for QR Code...';
          statusText.style.color = '#856404';
          qrContainer.innerHTML = '<p style="color: #999;">QR Code will appear here once ready...</p>';
        }
      } catch (error) {
        console.error('Error fetching QR:', error);
        document.getElementById('status-text').textContent = 'âŒ Error loading QR Code';
        document.getElementById('status-text').style.color = '#dc3545';
      }
    }
    
    // Check QR on page load
    checkQR();
    
    // Auto refresh every 5 seconds
    setInterval(checkQR, 5000);
  </script>
</body>
</html>
